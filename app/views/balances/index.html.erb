<p id="notice"><%= notice %></p>


<div class="container">
        <div>
            <div>
                <div class="row">
                    <div class="col-sm-10"><h2><b>User's purchases</b></h2></div>
                    <div class="col-sm-2">
                        <%= link_to 'Add purchase ', new_balance_path, :class =>"btn btn-info add-new" %>
                    </div>
                </div>
            </div>
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Spent</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                  <% @balances.each do |balance| %>
                    <tr>
                        <td><%= balance.user.id %></td>
                        <td><%= balance.user.username %></td>
                        <td>â‚¬<%= balance.balance %></td>
                        <td>
							              <%= link_to 'Show', balance, :class => "btn btn-primary btn-sm" %>
							              <% if current_user && current_user.admin? %>
                              <%= link_to 'Edit', edit_balance_path(balance), :class => "btn btn-primary btn-sm"%>
                              <%= link_to 'Remove', balance, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-sm" %>
                            <% end %>
                        </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
    </div>         
