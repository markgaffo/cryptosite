<p id="notice"><%= notice %></p>

<h1>User balances</h1>

<table>
  <thead>
    <tr>
      <th>Balance</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.balance %></td>
        <td><%= balance.user.username %></td>
        <td><%= link_to 'Show', balance %></td>
        <!-- to only allow admins to change posts -->
        <% if current_user && current_user.admin? %>
        <td><%= link_to 'Edit', edit_balance_path(balance) %></td>
        <td><%= link_to 'Destroy', balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a user balance', new_balance_path %>
